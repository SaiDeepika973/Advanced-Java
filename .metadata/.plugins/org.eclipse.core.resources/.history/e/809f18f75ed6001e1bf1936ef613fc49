//Ternary operators
function AdultorChild()
{
	let age=document.getElementById('age').value
	let ans=(age<18)?"child":"adult"
	document.getElementById('adorch')=ans
}

function DrinkorNot()
{
	let age=document.getElementById('age1')
	let ans=(age<18)?"water":"wine"
	document.getElementById('whattodrink')=ans
}

function StringToNumber()
{
	let num=document.getElementById('number')
	document.getElementById('numberstring')=Number(num)
	document.getElementById('numstr')=parseFloat(num)
	document.getElementById('ns')=parseInt(num)
}
function NumberToString()
{
	let num=String(document.getElementById('number1'))
	let num2=String(document.getElementById('number2'))
	document.write(num+num2)
}
function BooleanData()
{
	let a=Boolean(document.getElementById('b'))
	document.write(a)
}
function compare()
{
	let one=document.getElementById('one')
	let two=document.getElementById('two')
	document.write(one==two)
	document.write(one===two)
}
function logical()
{
	let a=document.getElementById('a')
	let b=document.getElementById('b')
	
	document.write(a && b)
	document.write(a||b)
}
	
	